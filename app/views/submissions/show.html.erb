<h3>View Item</h3>

<%= image_tag @submission.photo(:medium) %>
Date found: <%= @submission.date.strftime("%b %-d, %Y") %>
Description: <%= @submission.description %>
Location: <%= @submission.location %>
<% if @submission.response %> 
  From the experts: <%= @submission.response %>
<% end %>
<% if current_user && current_user.is_admin %>
  <%= link_to 'Edit', edit_user_submission_path(user_id: @submission.user_id, id: @submission.id) %>
  <%= link_to 'Delete', user_submission_path(user_id: @submission.user_id, id: @submission.id), method: :delete, data: {confirm: 'Are you absolutely sure you would like to delete?'} %>
<% end %>
<%= link_to 'Home', '/' %>

